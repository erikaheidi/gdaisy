{
    "name": "erikaheidi/gdaisy",
    "description": "php-gd templating system",
    "type": "library",
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "GDaisy\\": "src/",
            "GDaisy\\Command\\": "bin/command"
        }
    },
    "require": {
        "php": "^8.1",
        "ext-gd": "*",
        "ext-json": "*",
        "minicli/minicli": "^3.2"
    },
    "require-dev": {
        "pestphp/pest": "^1.0"
    },
    "bin": [
        "bin/gdaisy"
    ],
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
